<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/rlCabinetRootLayout"
    android:layout_width="match_parent"
    android:layout_height="80dp">
    
    <LinearLayout
        android:layout_width="match_parent"
        android:gravity="center_vertical"
        android:paddingStart="24dp"
        android:layout_height="match_parent"
        android:orientation="horizontal">

        <com.melodigm.post.widget.CircularImageView
            android:id="@+id/ivCabinetImage"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_marginEnd="20dp"
            app:civ_border_width="0dp"
            android:src="@drawable/icon_album_dummy"/>

        <TextView
            android:id="@+id/tvCabinetName"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:gravity="center_vertical"
            android:text="@string/app_name"
            android:textColor="#FF000000"
            android:textSize="11dp"/>

        <TextView
            android:id="@+id/tvCabinetMusicCount"
            android:layout_width="76dp"
            android:layout_height="match_parent"
            android:layout_marginStart="20dp"
            android:layout_marginEnd="24dp"
            android:gravity="right|center_vertical"
            android:text="@string/app_name"
            android:textColor="#99000000"
            android:textSize="11dp"/>

        <LinearLayout
            android:id="@+id/llCabinetAddLayout"
            android:layout_width="wrap_content"
            android:orientation="horizontal"
            android:visibility="gone"
            android:clickable="true"
            android:gravity="center_vertical"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/tvCabinetMusicCountAdd"
                android:layout_width="52dp"
                android:layout_height="match_parent"
                android:layout_marginStart="16dp"
                android:gravity="right|center_vertical"
                android:text="@string/app_name"
                android:textColor="#99000000"
                android:textSize="11dp"/>

            <RelativeLayout
                android:id="@+id/rlPlayMusicBtn"
                android:layout_width="60dp"
                android:layout_height="match_parent"
                android:gravity="center">

                <ImageView
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:layout_alignParentEnd="true"
                    android:src="@drawable/icon_plist_play"
                    android:contentDescription="@string/app_name"/>

            </RelativeLayout>

        </LinearLayout>
        
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        android:background="#FFF2F2F2"/>
    
</RelativeLayout>
