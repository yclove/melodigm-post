<?xml version="1.0" encoding="utf-8"?>
<com.melodigm.post.widget.swipelayout.SwipeRevealLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/swipe_layout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:dragEdge="right"
    app:swipeMode="same_level">

    <FrameLayout
        android:id="@+id/delete_layout"
        android:layout_width="40dp"
        android:layout_height="68dp">

        <RelativeLayout
            android:id="@+id/btnOstRepleDel"
            android:layout_width="40dp"
            android:layout_height="68dp"
            android:gravity="left|center_vertical"
            android:clickable="true">

            <ImageView
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:background="@drawable/bt_del"
                android:contentDescription="@string/app_name"/>

        </RelativeLayout>

    </FrameLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:paddingStart="20dp"
        android:paddingBottom="24dp"
        android:paddingTop="24dp">

        <LinearLayout
            android:layout_width="28dp"
            android:layout_height="match_parent"
            android:gravity="center_vertical">

            <ImageView
                android:id="@+id/ivOstRepleBullet"
                android:layout_width="4dp"
                android:layout_height="4dp"
                android:layout_marginStart="8dp"
                android:visibility="gone"/>

            <ImageView
                android:id="@+id/ivOstRepleWriterBullet"
                android:layout_width="12dp"
                android:layout_height="12dp"
                android:layout_marginStart="4dp"
                android:src="@drawable/icon_rebullet"
                android:visibility="gone"/>

        </LinearLayout>

        <TextView
            android:id="@+id/tvOstRepleCont"
            android:layout_width="0dp"
            android:layout_marginEnd="40dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center_vertical"
            android:minHeight="20dp"
            android:text="@string/app_name"
            android:textColor="#99000000"
            android:textSize="11dp"/>

    </LinearLayout>
    
</com.melodigm.post.widget.swipelayout.SwipeRevealLayout>
