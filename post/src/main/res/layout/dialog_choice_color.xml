<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:id="@+id/choiceColorLayout"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="136dp"
    android:background="#CC000000"
    android:orientation="vertical"
    android:visibility="gone">

    <LinearLayout
        android:id="@+id/choiceColorHeaderLayout"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:gravity="bottom"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tvChoiceColorHeaderTitle"
            android:textSize="11dp"
            android:textColor="#FFFFFFFF"
            android:layout_width="0dp"
            android:layout_marginStart="60dp"
            android:gravity="center"
            android:layout_height="20dp"
            android:layout_weight="1"
            android:text="@string/msg_post_color_info"/>

        <RelativeLayout
            android:id="@+id/btnPopupCloseLayout"
            android:layout_width="60dp"
            android:layout_height="20dp"
            android:clickable="true">

            <ImageView
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_centerHorizontal="true"
                android:layout_centerVertical="true"
                android:background="@drawable/bt_pop_close"/>

        </RelativeLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:gravity="center"
        android:layout_height="96dp">

        <com.melodigm.post.widget.ColorIndicatorView
            android:id="@+id/choiceColorIndicator"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:scrollbars="none"/>

    </LinearLayout>

</LinearLayout>
