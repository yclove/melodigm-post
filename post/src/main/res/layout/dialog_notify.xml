<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="right"
        android:background="#FFFFFFFF"
        android:layout_alignParentBottom="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:background="#FFD73D66"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <TextView
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:textSize="11dp"
                android:layout_marginStart="20dp"
                android:textColor="#FFFFFFFF"
                android:gravity="center_vertical"
                android:text="@string/msg_post_notify"/>

            <RelativeLayout
                android:id="@+id/btnNotifyCloseLayout"
                android:layout_width="60dp"
                android:layout_height="match_parent"
                android:clickable="true"
                android:gravity="center">

                <ImageView
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:layout_alignParentEnd="true"
                    android:background="@drawable/bt_pop_close"
                    android:contentDescription="@string/app_name"/>

            </RelativeLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="68dp"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <TextView
                android:textSize="11dp"
                android:layout_marginStart="20dp"
                android:layout_width="match_parent"
                android:textColor="#FF000000"
                android:layout_height="wrap_content"
                android:text="@string/msg_post_notify_info"/>

        </LinearLayout>

        <LinearLayout
            android:id="@+id/btnNotifyAk01"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/ivNotifyAk01Circle"
                android:layout_width="8dp"
                android:layout_marginStart="26dp"
                android:layout_marginEnd="26dp"
                android:layout_height="8dp"/>

            <TextView
                android:id="@+id/tvNotifyAk01"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="11dp"
                android:textColor="#99000000"
                android:text="@string/msg_post_notify_ak01"/>

        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:background="#FFF2F2F2"
            android:layout_marginStart="20dp"
            android:layout_marginEnd="20dp"
            android:layout_height="1dp"/>

        <LinearLayout
            android:id="@+id/btnNotifyAk02"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/ivNotifyAk02Circle"
                android:layout_width="8dp"
                android:layout_marginStart="26dp"
                android:layout_marginEnd="26dp"
                android:layout_height="8dp"/>

            <TextView
                android:id="@+id/tvNotifyAk02"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="11dp"
                android:textColor="#99000000"
                android:text="@string/msg_post_notify_ak02"/>

        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:background="#FFF2F2F2"
            android:layout_marginStart="20dp"
            android:layout_marginEnd="20dp"
            android:layout_height="1dp"/>

        <LinearLayout
            android:id="@+id/btnNotifyAk03"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/ivNotifyAk03Circle"
                android:layout_width="8dp"
                android:layout_marginStart="26dp"
                android:layout_marginEnd="26dp"
                android:layout_height="8dp"/>

            <TextView
                android:id="@+id/tvNotifyAk03"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="11dp"
                android:textColor="#99000000"
                android:text="@string/msg_post_notify_ak03"/>

        </LinearLayout>

        <LinearLayout
            android:id="@+id/btnNotifyConfirm"
            android:layout_width="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:layout_height="60dp">

            <TextView
                android:id="@+id/tvNotifyConfirm"
                android:layout_width="48dp"
                android:layout_height="28dp"
                android:textSize="11dp"
                android:textColor="#99000000"
                android:gravity="right|center_vertical"
                android:text="@string/confirm"/>

            <ImageView
                android:id="@+id/ivNotifyConfirm"
                android:layout_width="20dp"
                android:layout_marginStart="12dp"
                android:layout_marginEnd="20dp"
                android:layout_height="20dp"
                android:contentDescription="@string/app_name"
                android:src="@drawable/icon_chk_gray"/>

        </LinearLayout>

    </LinearLayout>

</RelativeLayout>
